<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All directors
    </h1>

    <a href="/directors/new" class="btn btn-block btn-outline-secondary">
      Add a new director
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "director_templates/directors_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Bio
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @directors.each do |director| %>
      <tr>
        <td>
          <%= director.id %>
        </td>

        <td>
          <%= director.name %>
        </td>

        <td>
          <%= director.dob %>
        </td>

        <td>
          <%= director.bio %>
        </td>

        <td>
          <%= director.image %>
        </td>

        <td>
          <%= time_ago_in_words(director.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(director.updated_at) %> ago
        </td>

        <td>
          <a href="/directors/<%= director.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @directors, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
