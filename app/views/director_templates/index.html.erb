<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All directors
    </h1>

    <a href="/directors/new" class="btn btn-block btn-outline-secondary">
      Add a new director
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "director_templates/directors_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Bio
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @directors.each do |director| %>
      <tr>
        <!-- Display director.id start -->
        <td>
          <%= director.id %>
        </td>
        <!-- Display director.id end -->

        <!-- Display director.name start -->
        <td>
          <%= director.name %>
        </td>
        <!-- Display director.name end -->

        <!-- Display director.dob start -->
        <td>
          <%= director.dob %>
        </td>
        <!-- Display director.dob end -->

        <!-- Display director.bio start -->
        <td>
          <%= director.bio %>
        </td>
        <!-- Display director.bio end -->

        <!-- Display director.image start -->
        <td>
          <%= director.image %>
        </td>
        <!-- Display director.image end -->

        <!-- Display director.created_at start -->
        <td>
          <%= time_ago_in_words(director.created_at) %> ago
        </td>
        <!-- Display director.created_at end -->

        <!-- Display director.updated_at start -->
        <td>
          <%= time_ago_in_words(director.updated_at) %> ago
        </td>
        <!-- Display director.updated_at end -->

        <td>
          <a href="/directors/<%= director.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @directors, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
