<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Director #<%= @director.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/directors" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link director start -->
      <div class="col">
        <a href="/directors/<%= @director.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit director
        </a>
      </div>
      <!-- Edit link director end -->

      <!-- Delete link director start -->
      <div class="col">
        <a href="/delete_director/<%= @director.id %>" class="btn btn-block btn-outline-secondary">
          Delete director
        </a>
      </div>
      <!-- Delete link director end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @director.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Dob
      </dt>
      <!-- Display dob start -->
      <dd>
        <%= @director.dob %>
      </dd>
      <!-- Display dob end -->

      <dt>
        Bio
      </dt>
      <!-- Display bio start -->
      <dd>
        <%= @director.bio %>
      </dd>
      <!-- Display bio end -->

      <dt>
        Image
      </dt>
      <!-- Display image start -->
      <dd>
        <%= @director.image %>
      </dd>
      <!-- Display image end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@director.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@director.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "director_templates/director_filmography" %>
  </div>
</div>
<!-- Show Page Customization end -->
