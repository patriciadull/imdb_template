<h1>
  Add a new role
</h1>


<hr>

<!-- Form role start -->
<form action="/create_role" method="post">
<!-- Form role end -->

  <!-- Label and input for movie_id start -->
  <div class="form-group">
    <label for="movie_id">
      Movie
    </label>

    <!-- Input for movie_id start -->
    <input type="text" id="movie_id" name="movie_id" class="form-control">
    <!-- Input for movie_id end -->
  </div>
  <!-- Label and input for movie_id end -->

  <!-- Label and input for actor_id start -->
  <div class="form-group">
    <label for="actor_id">
      Actor
    </label>

    <!-- Input for actor_id start -->
    <input type="text" id="actor_id" name="actor_id" class="form-control">
    <!-- Input for actor_id end -->
  </div>
  <!-- Label and input for actor_id end -->

  <!-- Label and input for character_name start -->
  <div class="form-group">
    <label for="character_name">
      Character name
    </label>

    <!-- Input for character_name start -->
    <input type="text" id="character_name" name="character_name" class="form-control">
    <!-- Input for character_name end -->
  </div>
  <!-- Label and input for character_name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create role
  </button>
</form>

