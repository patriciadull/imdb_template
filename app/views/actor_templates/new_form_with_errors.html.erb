<% if @actor.present? %>
  <% if @actor.errors.any? %>
    <% @actor.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new actor
</h1>


<hr>

<form action="/create_actor" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @actor.name %>">
  </div>

  <div class="form-group">
    <label for="dob">
      Dob
    </label>

    <input type="text" id="dob" name="dob" class="form-control" value="<%= @actor.dob %>">
  </div>

  <div class="form-group">
    <label for="bio">
      Bio
    </label>

    <textarea id="bio" name="bio" class="form-control" rows="3"><%= @actor.bio %></textarea>
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @actor.image %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create actor
  </button>
</form>

<hr>

<a href="/actors">
  Go back
</a>
