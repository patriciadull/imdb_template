<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Roles

    <a data-toggle="collapse" href="#actor_roles_new_form">
      Add role
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @actor.roles.each do |role| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/roles/<%= role.id %>">
          <%= role.character_name %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_role_from_actor/<%= role.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="actor_roles_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "actor_templates/actor_roles_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
