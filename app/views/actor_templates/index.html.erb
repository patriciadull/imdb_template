<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All actors
    </h1>

    <a href="/actors/new" class="btn btn-block btn-outline-secondary">
      Add a new actor
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "actor_templates/actors_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Bio
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @actors.each do |actor| %>
      <tr>
        <!-- Display actor.id start -->
        <td>
          <%= actor.id %>
        </td>
        <!-- Display actor.id end -->

        <!-- Display actor.name start -->
        <td>
          <%= actor.name %>
        </td>
        <!-- Display actor.name end -->

        <!-- Display actor.dob start -->
        <td>
          <%= actor.dob %>
        </td>
        <!-- Display actor.dob end -->

        <!-- Display actor.bio start -->
        <td>
          <%= actor.bio %>
        </td>
        <!-- Display actor.bio end -->

        <!-- Display actor.image start -->
        <td>
          <%= actor.image %>
        </td>
        <!-- Display actor.image end -->

        <!-- Display actor.created_at start -->
        <td>
          <%= time_ago_in_words(actor.created_at) %> ago
        </td>
        <!-- Display actor.created_at end -->

        <!-- Display actor.updated_at start -->
        <td>
          <%= time_ago_in_words(actor.updated_at) %> ago
        </td>
        <!-- Display actor.updated_at end -->

        <td>
          <a href="/actors/<%= actor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @actors, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
