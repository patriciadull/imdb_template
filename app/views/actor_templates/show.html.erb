<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Actor #<%= @actor.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/actors" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link actor start -->
      <div class="col">
        <a href="/actors/<%= @actor.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit actor
        </a>
      </div>
      <!-- Edit link actor end -->

      <!-- Delete link actor start -->
      <div class="col">
        <a href="/delete_actor/<%= @actor.id %>" class="btn btn-block btn-outline-secondary">
          Delete actor
        </a>
      </div>
      <!-- Delete link actor end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @actor.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Dob
      </dt>
      <!-- Display dob start -->
      <dd>
        <%= @actor.dob %>
      </dd>
      <!-- Display dob end -->

      <dt>
        Bio
      </dt>
      <!-- Display bio start -->
      <dd>
        <%= @actor.bio %>
      </dd>
      <!-- Display bio end -->

      <dt>
        Image
      </dt>
      <!-- Display image start -->
      <dd>
        <%= @actor.image %>
      </dd>
      <!-- Display image end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@actor.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@actor.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

