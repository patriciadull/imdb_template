<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All movies
    </h1>

    <a href="/movies/new" class="btn btn-block btn-outline-secondary">
      Add a new movie
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "movie_templates/movies_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Year
        </th>

        <th>
          Duration
        </th>

        <th>
          Description
        </th>

        <th>
          Image
        </th>

        <th>
          Director
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.id %>
        </td>

        <td>
          <%= movie.title %>
        </td>

        <td>
          <%= movie.year %>
        </td>

        <td>
          <%= movie.duration %>
        </td>

        <td>
          <%= movie.description %>
        </td>

        <td>
          <%= movie.image %>
        </td>

        <td>
          <% if movie.director.present? %>
            <a href="/directors/<%= movie.director.id %>">
              <%= movie.director.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(movie.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(movie.updated_at) %> ago
        </td>

        <td>
          <a href="/movies/<%= movie.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @movies, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
